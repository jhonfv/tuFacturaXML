@{
    ViewData["Title"] = "Políticas de Privacidad";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-shield-alt me-2"></i>
                        Políticas de Privacidad
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Importante:</strong> Esta herramienta procesa facturas de proveedores sin almacenar datos personales.
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6>Procesamiento de Facturas</h6>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-check text-success me-2"></i>Sin almacenamiento de datos</li>
                                <li><i class="fas fa-check text-success me-2"></i>Procesamiento temporal</li>
                                <li><i class="fas fa-check text-success me-2"></i>Sin cookies de seguimiento</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6>Seguridad</h6>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-check text-success me-2"></i>Procesamiento local</li>
                                <li><i class="fas fa-check text-success me-2"></i>Sin transmisión de datos</li>
                                <li><i class="fas fa-check text-success me-2"></i>Acceso libre</li>
                            </ul>
                        </div>
                    </div>

                    <div class="text-center">
                        <a href="/" class="btn btn-primary">
                            <i class="fas fa-arrow-left me-2"></i>
                            Volver
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
