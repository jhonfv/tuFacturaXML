@{
    ViewData["Title"] = "Home Page";
}

@section styles{}

<div class="text-center container">
    <h1 class="display-4">Hola!</h1>
    <h2>Carga tu factura aquí:</h2>
    <form method="post" action="/Facturas/CargarFactura" enctype="multipart/form-data">
       
        <div class="input-group mb-3">
            <input type="file" class="form-control" name="file" id="file" multiple accept=".xml, .zip" required>
            <label class="input-group-text" for="file">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-arrow-up-fill" viewBox="0 0 16 16">
                    <path d="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0zM9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1zM6.354 9.854a.5.5 0 0 1-.708-.708l2-2a.5.5 0 0 1 .708 0l2 2a.5.5 0 0 1-.708.708L8.5 8.707V12.5a.5.5 0 0 1-1 0V8.707L6.354 9.854z" />
                </svg>
            </label>
        </div>

        <button type="submit" class="btn btn-primary">Cargar Facturass</button>
    </form>

    
</div>
